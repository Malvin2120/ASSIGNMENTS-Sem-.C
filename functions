#include <stdio.h>

void checkEvenOrOdd(int number) {
    if (number % 2 == 0) {
        printf("The number is even\n");
    } else {
        printf("The number is odd\n");
    }
}

int main() {
    int num;

    // Ask the user for input
    printf("Enter a number: ");
    scanf("%d", &num);

    // Call the function to check if the number is even or odd
    checkEvenOrOdd(num);

    return 0;
}
